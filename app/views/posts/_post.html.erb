<div class="posts">
  <div class="content">
    <%= post.content %>
  </div>

  <div class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
  </div>
  
  <% if current_user?(post.user) %>
   <small><%= link_to "delete", post, method: :delete,
                        data: { confirm: "Are you sure?"},
                        title: post.content %></small>
  <% end %>

</div>