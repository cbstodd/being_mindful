<%= form_for(@post, html: {:multipart => true}) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.bootsy_area :content, rows: 6, placeholder: "Compose new post..." %><br />
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>  
    
    <%= f.submit "Post", class: "btn-sm btn-primary", id: "button" %>

<% end %>