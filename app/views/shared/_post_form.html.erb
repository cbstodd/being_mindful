<%= form_for(@post) do |f| %>
  <div class="">
    <%= render 'shared/error_messages', object: f.object %>
  </div>

  <div class="">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
  </div>

  <div class="">
    <%= f.submit "Post", class: "btn-sm btn-primary", id: "button" %>
  </div>
<% end %>