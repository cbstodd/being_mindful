<%= form_for(@post, html: {:multipart => true}) do |f| %>

    <%= render 'shared/error_messages', object: f.object %>

    <%= f.bootsy_area :content, placeholder: "Compose new post...", rows: 6, required: true %><br />  
    
    <%= f.submit "Post", class: "btn-sm btn-primary", id: "button" %>

<% end %>